<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="65dp"
    android:layout_width="fill_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/todo_item_texts_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/todo_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:text="@string/note_text"/>

        <TextView
            android:id="@+id/todo_remaining_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/colorAccent"
            android:text="@string/note_time_remaining"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="6dp"
        android:layout_alignRight="@id/todo_item_texts_layout"
        android:layout_alignEnd="@id/todo_item_texts_layout">

        <Button
            android:id="@+id/button_delete_todo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_remove"
            android:alpha="0.5"
            style="@style/ImageButton"/>

        <Button
            android:id="@+id/button_complete_todo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_done"
            android:alpha="0.5"
            style="@style/ImageButton"/>

    </LinearLayout>

</RelativeLayout>