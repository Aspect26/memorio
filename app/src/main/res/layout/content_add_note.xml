<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.AddNoteActivity"
    tools:showIn="@layout/activity_add_note">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/edit_text_new_note_text"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:hint="@string/add_note_text" />

        <Button
            android:id="@+id/button_add_note_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_note_button_date" />

        <Button
            android:id="@+id/button_add_note_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_note_button_time" />

        <Button
            android:id="@+id/button_save_new_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_note_add_button" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
