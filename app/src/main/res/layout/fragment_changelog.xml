        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ChangeLogSummary"
            android:text="@string/changelog_v_1_0_0_summary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
