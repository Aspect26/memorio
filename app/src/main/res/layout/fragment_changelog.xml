        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ChangeLogVersion"
            android:text="@string/changelog_v_0_9_2_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ChangeLogSummary"
            android:text="@string/changelog_v_0_9_2_summary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ChangeLogVersion"
            android:text="@string/changelog_v_0_9_0_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ChangeLogSummary"
            android:text="@string/changelog_v_0_9_0_summary" />

    </LinearLayout>

</FrameLayout>
